{
  "name": "Masterwall",
  "description": "scam-sites detector",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popups/safe.html"
  },
  "host_permissions": [
    "http://localhost:8080/*"
  ],
  "permissions": [
    "tabs",
	"storage",
	"declarativeContent"
	]
}
